        <a asp-controller="Users" asp-action="CreateRole" class=" btn btn-primary mb-3" style="width: auto">
            Add new Role
        </a>

        foreach (var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id: @role.Id
                </div>
