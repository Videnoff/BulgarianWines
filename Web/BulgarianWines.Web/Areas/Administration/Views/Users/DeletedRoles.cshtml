@model IEnumerable<BulgarianWines.Web.ViewModels.Administration.Users.DeletedRolesViewModel>

@{
    ViewData["Title"] = "Deleted Roles";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
</head>

<div class="table-responsive">
    <table class="table align-middle table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th>Role Id</th>
            <th>Role name</th>
            <th>Deleted On</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr class="row">
                <td class="col-12 d-flex justify-content-center">
                    <strong>
                        No deleted Roles
                    </strong>
                </td>
            </tr>
        }
        @foreach (var item in this.Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DeletedOn
                </td>
                <td>
                <a asp-controller="Users" asp-action="RestoreRole" asp-route-id="@item.Id" class="btn btn-warning">
                    Restore
                </a>
            </tr>
        }
        </tbody>
    </table>
</div>
