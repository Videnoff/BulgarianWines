@model BulgarianWines.Web.ViewModels.Wines.CreateWineInputModel

@{
    //var categoryItems = this.Model
    //    .CategoriesItems
    //    .Select(x =>
    //        new SelectListItem(x.Value, x.Key));
    var volumeItems = this.Model
        .VolumesItems
        .Select(x =>
            new SelectListItem(x.Value, x.Key));
    var harvestItems = this.Model
        .HarvestsItems
        .Select(x =>
            new SelectListItem(x.Value, x.Key));
    var varietyItems = this.Model
        .VarietyItems
        .Select(x =>
            new SelectListItem(x.Value, x.Key));
    var originItems = this.Model
        .OriginsItems
        .Select(x =>
            new SelectListItem(x.Value, x.Key));
}

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Wine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Administration" asp-controller="Wines" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginId" class="control-label"></label>
                <select asp-for="OriginId" class="form-control" asp-items="originItems"></select>
                <span asp-validation-for="OriginId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedImages" class="control-label"></label>
                <input asp-for="UploadedImages" class="col-md-10" />
                <span asp-validation-for="UploadedImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VarietyId" class="control-label"></label>
                <select asp-for="VarietyId" class="form-control" asp-items="varietyItems"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()))"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolumeId" class="control-label"></label>
                <select asp-for="VolumeId" class="form-control" asp-items="volumeItems"></select>
            </div>
            <div class="form-group">
                <label asp-for="HarvestId" class="control-label"></label>
                <select asp-for="HarvestId" class="form-control" asp-items="harvestItems"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DeletedOn" class="control-label"></label>
                <input asp-for="DeletedOn" class="form-control" />
                <span asp-validation-for="DeletedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedOn" class="control-label"></label>
                <input asp-for="CreatedOn" class="form-control" />
                <span asp-validation-for="CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedOn" class="control-label"></label>
                <input asp-for="ModifiedOn" class="form-control" />
                <span asp-validation-for="ModifiedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
