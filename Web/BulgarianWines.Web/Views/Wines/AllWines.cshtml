@model BulgarianWines.Web.ViewModels.Wines.WinesListViewModel
@{
    this.ViewData["Title"] = Model.CategoryName;
}

<style>
    h1 {
        text-align: center;
    }
</style>

<h1>
    @this.ViewData["Title"]
</h1>

<hr />

<div id="Tab_Category_Slider" class="category_tab box">
    <div class="container">
        <div class="title-wrapper">
            <div class="box-heading">
                our Products
            </div>
        </div>
        <div class="tabs">
            <div class="etabs">
                <ul class="nav nav-tabs">
                    <li class="">
                        <a onclick="vlcazwfnuqloadAjaxData('18')" href="#gattinara" data-toggle="tab">
                            @this.ViewData["Title"]
                        </a>
                    </li>
                </ul>
            </div>
            <div class="tab-content home-products">
                <div class="tab-pane active" id="gattinara">
                    @*<div class="owl-carousel owl-demo-tabcate">*@
                    <div class="product-block-wrapper">
                        <div class="item text-center product-innerblock">
                            @foreach (var wine in Model.Wines)
                            {
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="product-block product-thumb transition">
                                        <div class="product-block-inner">
                                            <div class="image">
                                                <a asp-area="" asp-controller="Wines" asp-action="SingleWine" asp-route-id="@wine.Id">
                                                    <img class="img-responsive reg-image" src="@wine.ImageUrl." title="@wine.Name" alt="@wine.Name" style="max-height: 100%; max-width: 100%" />
                                                    <img class="img-responsive hover-image" src="@wine.ImageUrl" title="@wine.Name" alt="@wine.Name" style="max-height: 100%; max-width: 100%" />
                                                </a>
                                                <div class="button-group">
                                                    <button type="button" data-placement="right" title="Add to Cart" class="addtocart" onclick="cart.add(@wine.Id);">
                                                        Add to Cart
                                                    </button>
                                                    <button class="wishlist" type="button" data-placement="right" title="Add to Wish List " onclick="wishlist.add('51 ');"></button>
                                                    <div class="quickview" data-placement="right" title="Quick view">
                                                        <a asp-controller="Wines" asp-action="SingleWine" asp-route-id="@wine.Id">
                                                            Quick View
                                                        </a>
                                                    </div>
                                                    <button class="compare" type="button" data-placement="right" title="Compare this Product " onclick="compare.add('51 ');"></button>
                                                </div>
                                            </div>
                                            <div class="caption">
                                                <h4>
                                                    <a asp-area="" asp-controller="Wines" asp-action="SingleWine" asp-route-id="@wine.Id">
                                                        @wine.Name
                                                    </a>
                                                </h4>
                                                <p class="price">
                                                    $122.00
                                                    <span class="price-tax">
                                                        Ex Tax: $100.00
                                                    </span>
                                                </p>
                                                <div class="rating">
                                                    <span class="fa fa-stack">
                                                        <i class="fa fa-star fa-stack-2x"></i>
                                                    </span>
                                                    <span class="fa fa-stack">
                                                        <i class="fa fa-star fa-stack-2x"></i>
                                                    </span>
                                                    <span class="fa fa-stack">
                                                        <i class="fa fa-star fa-stack-2x"></i>
                                                    </span>
                                                    <span class="fa fa-stack">
                                                        <i class="fa fa-star fa-stack-2x"></i>
                                                    </span>
                                                    <span class="fa fa-stack">
                                                        <i class="fa fa-star off fa-stack-2x"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
</div>
<hr />


<partial name="_PagingPartial" model="@Model" />
