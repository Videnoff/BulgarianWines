                                    <div class="form-group required">
                                        <label class="col-sm-2 control-label" asp-for="UserFirstName">
                                            First Name
                                        </label>
                                        <div class="col-sm-10">
                                            <input asp-for="UserFirstName" type="text" placeholder="First Name" id="input-payment-firstname" class="form-control">
