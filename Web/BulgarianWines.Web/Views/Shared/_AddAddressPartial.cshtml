</head>

<body class="account-address-add   layout-2 left-col">
    <div id="account-address" class="container">
        <div class="row">
            <aside id="column-left" class="col-sm-3 hidden-xs">
            </aside>
            <div id="content" class="col-sm-9">
                <form asp-area="" asp-controller="Addresses" asp-action="Create" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <fieldset>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" asp-for="Street">
                                Street
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="Street" type="text" name="street" value="" placeholder="Street" id="input-street" class="form-control" />
                            </div>
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" asp-for="City">
                                City
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="City" type="text" name="city" value="" placeholder="City" id="input-city" class="form-control" />
                            </div>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" asp-for="PostCode">
                                Post Code
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="PostCode" type="text" name="postcode" value="" placeholder="Post Code" id="input-postcode" class="form-control" />
                            </div>
                            <span asp-validation-for="PostCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Description">
                                Description
                            </label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" type="text" name="description" value="" placeholder="Description" id="input-description" class="form-control"></textarea>
                            </div>
                            <span asp-validation-for="Description"></span>
                        </div>
                        <input asp-for="UserId" hidden />
                    </fieldset>
                    <div class="buttons clearfix">
                        <div class="pull-left">
                        </div>
                        <div class="pull-right">
                            <button type="submit" value="Add" class="btn btn-primary">
                                Add Address
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <br />
        </div>
        <br />
    </div>
</body>
</html>