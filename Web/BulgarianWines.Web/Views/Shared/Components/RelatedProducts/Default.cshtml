@model IEnumerable<BulgarianWines.Web.ViewModels.Wines.SideWinesViewModel>

@{
    Layout = null;
}

<div class="box related product-box">
    <div class="container">
        <div class="title-wrapper">
            <div class="box-heading">
                Related Products
            </div>
        </div>
        <div class="box-content">
            <div id="products-related" class="related-products home-products">
                <div class="customNavigation">
                    <a class="fa prev ">
                        prev
                    </a>
                    <a class="fa next ">
                        next
                    </a>
                </div>

                <div class="box-product product-carousel" id="related-carousel">
                    <div class="slider-wrapper-outer">
                        <div class="slider-wrapper" style="width: 6460px; left: 0px; display: block; transform: translate3d(-323px, 0px, 0px); transition: all 1000ms ease 0s;">
                            @foreach (var wine in Model)
                            {
                                <div class="slider-item">
                                    <div class="product-block product-thumb transition">
                                        <div class="product-block-inner">
                                            <!-- <div class="image">
                                                <a href="http://demos.thementic.com/opencart/OPC01/OPC0100034/index.php?route=product/product&amp;product_id=30 "><img src="http://demos.thementic.com/opencart/OPC01/OPC0100034/image/cache/catalog/demo/product/16-380x384.jpg " alt="elementum urna " title="elementum urna " class="img-responsive" /></a>

                                            </div> -->

                                            <div class="image">
                                                <a asp-controller="Wines" asp-action="SingleWine" asp-route-id="@wine.Id">
                                                    <img src="@wine.ImageUrl" title="@wine.Name" alt="@wine.Name" class="img-responsive reg-image" />
                                                    <img class="img-responsive hover-image" src="@wine.ImageUrl" title="@wine.Name" alt="@wine.Name" />
                                                </a>

                                                <!--
                                                -->

                                                <div class="button-group">
                                                    <button type="button" data-placement="right" title="Add to cart" class="addtocart" onclick="cart.add('30 ');">
                                                        Add to Cart
                                                    </button>
                                                    <button class="wishlist" type="button" data-placement="right" title="Add to Wish List " onclick="wishlist.add('30 ');"></button>
                                                    <div class="quickview" data-placement="right" title="Quickview">
                                                        <a asp-controller="Wines" asp-action="SingleWine" asp-route-id="@wine.Id">
                                                            Quick View
                                                        </a>
                                                    </div>
                                                    <button class="compare" type="button" data-placement="right" title="Compare this Product " onclick="compare.add('30 ');"></button>
                                                </div>
                                            </div>

                                            <div class="caption">
                                                <h4>
                                                    <a asp-controller="Wines" asp-action="SingleWine" asp-route-id="@wine.Id">
                                                        @wine.Name
                                                    </a>
                                                </h4>
                                                <p class="price">
                                                    $122.00
                                                    <span class="price-tax">Ex Tax: $100.00</span>

                                                </p>

                                                <div class="rating">
                                                    <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                                                    <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                                                    <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                                                    <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                                                    <span class="fa fa-stack"><i class="fa fa-star off fa-stack-2x"></i></span>
                                                </div>
                                            </div>
                                            <div class="button-group">
                                                <button type="button" class="addtocart" onclick="cart.add('30 ');">
                                                    Add to Cart
                                                </button>
                                                <button class="wishlist" type="button" data-toggle="tooltip" title="Add to Wish List " onclick="wishlist.add('30 ');"></button>
                                                <button class="compare" type="button" data-toggle="tooltip" title="Compare this Product " onclick="compare.add('30 ');"></button>
                                            </div>

                                            <!-- Related Products Start -->
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
