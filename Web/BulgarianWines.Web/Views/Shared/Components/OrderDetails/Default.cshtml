<body class="checkout-success   layout-1">
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Orders" asp-action="Complete">
                        Success
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <br />

    <div id="common-success" class="container">
        <div class="row">
            <div id="content" class="col-sm-12">
                <h1>
                    Your order has been placed!
                </h1>
                <p>
                    Your order has been successfully processed!
                </p>
                <p>
                    You can view your order history by going to the <a asp-area="Identity" asp-page="/Account/Manage/Index">my account</a> page and by clicking on <a href="http://demos.thementic.com/opencart/OPC01/OPC0100034/index.php?route=account/order">history</a>.
                </p>
                <p>
                    Thanks for shopping with us online!
                </p>

                <form class="form-horizontal">
                    <h5>
                        Order Information
                    </h5>
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="UserFirstName">
                                First Name
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="UserFirstName" type="text" class="form-control" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="UserLastName">
                                Last Name
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="UserLastName" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Email">
                                Email
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="Email" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Phone">
                                Phone
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="Phone" type="text" name="phone" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Address">
                                Address
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="Address" type="text" name="address" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Id">
                                Id
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="Id" type="text" name="id" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="CreatedOn">
                                Created on
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="CreatedOn" type="text" name="createdon" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="PaymentType">
                                Payment Type
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="PaymentType" type="text" name="paymenttype" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="PaymentStatus">
                                Payment Status
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="PaymentStatus" type="paymentstatus" name="phone" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Status">
                                Status
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="Status" type="text" name="status" class="form-control" disabled>
                            </div>
                        </div>
                        @if (Model.IsDelivered)
                        {
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="DeliveredOn">
                                    DeliveredOn
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="DeliveredOn" type="text" name="deliveredon" class="form-control" disabled>
                                </div>
                            </div>
                        }
                    </div>
                </form>

                <div class="panel-collapse collapse in" id="collapse-checkout-confirm" aria-expanded="true" style="">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <td class="text-left">
                                        </td>
                                        <td class="text-left">
                                            Product Name
                                        </td>
                                        <td class="text-left">
                                            Model
                                        </td>
                                        <td class="text-right">
                                            Quantity
                                        </td>
                                        <td class="text-right">
                                            Unit Price
                                        </td>
                                        <td class="text-right">
                                            Total
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Wines)
                                    {
                                        <tr>
                                            <td class="text-left">
                                                <a asp-area="" asp-controller="Wines" asp-action="SingleWine" asp-route-id="@product.WineId">
                                                    <img src="@product.ImageUrl" alt="@product.WineName" title="@product.WineName" class="custom-image-box" />
                                                </a>
                                            </td>
                                            <td class="text-left">
                                                <a href="">
                                                    @product.WineName
                                                </a>
                                            </td>
                                            <td class="text-left">
                                                @product.WineProductCode
                                            </td>
                                            <td class="text-right">
                                                @product.Quantity
                                            </td>
                                            <td class="text-right">
                                                S$@product.Price
                                            </td>
                                            <td class="text-right">
                                                S$@(product.Price * product.Quantity)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5" class="text-right">
                                            <strong>
                                                Sub-Total:
                                            </strong>
                                        </td>
                                        <td class="text-right">
                                            S$@Model.Subtotal
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class="text-right">
                                            <strong>
                                                VAT (20%):
                                            </strong>
                                        </td>
                                        <td class="text-right">
                                            S$@Model.VAT
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class="text-right">
                                            <strong>
                                                Total:
                                            </strong>
                                        </td>
                                        <td class="text-right">
                                            S$@Model.GrandTotalPrice
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <div class="buttons">
                        <div class="pull-right">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                Continue
                            </a>
                        </div>
                    </div>
                    <br />
                    <br />
                </div>
                <br />
                <br />
            </div>
        </div>
    </div>
</body>
</html>
